{
    "name": "@luminx/core",
    "version": "1.0.3",
    "description": "React components library focused on simplicity and ease of use",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/style.css",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build:tailwind": "tailwindcss -i ./src/style.css -o ./dist/style.css",
        "build": "tsc && npm run build:tailwind",
        "pack": "npm run build && npm pack",
        "pack:clean": "cls && npm run build && npm pack && rmdir /s /q dist",
        "pack:post": "npm run pack && npm publish"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "dependencies": {
        "@tabler/icons-react": "^3.31.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.4.4",
        "react-syntax-highlighter": "^15.6.1",
        "tailwind-merge": "^3.0.2",
        "tailwind-scrollbar": "^3.1.0"
    },
    "devDependencies": {
        "typescript": "^5",
        "postcss": "^8.4.0",
        "tailwindcss": "^3.3.0",
        "autoprefixer": "^10.4.0",
        "postcss-cli": "^10.1.0",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-typescript": "^11.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-dts": "^6.0.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.0"
    }
}
