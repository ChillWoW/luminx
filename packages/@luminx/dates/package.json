{
    "name": "@luminx/dates",
    "version": "2.0.0",
    "description": "React date components library focused on simplicity and ease of use",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/style.css",
    "repository": {
        "type": "github",
        "url": "https://github.com/ChillWoW/luminx",
        "directory": "packages/@luminx/dates"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build:tailwind": "tailwindcss -i ./src/style.css -o ./dist/style.css",
        "copy:css": "node ../../../scripts/copy-css.js",
        "build": "tsc && npm run build:tailwind && npm run copy:css",
        "build:clean": "cls && rmdir /s /q dist && npm run build",
        "pack": "npm run build && npm pack",
        "pack:clean": "cls && npm run build && npm pack && rmdir /s /q dist",
        "pack:post": "npm run build && npm publish"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0",
        "dayjs": ">=1.0.0"
    },
    "dependencies": {
        "@tabler/icons-react": "^3.31.0",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.0.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.8",
        "@rollup/plugin-node-resolve": "^15.3.1",
        "@rollup/plugin-typescript": "^11.1.6",
        "autoprefixer": "^10.4.0",
        "postcss": "^8.4.0",
        "postcss-cli": "^10.1.0",
        "rollup": "^4.0.0",
        "rollup-plugin-dts": "^6.2.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
